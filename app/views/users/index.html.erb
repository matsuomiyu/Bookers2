<%= render 'books/user', user: @user, book: @book %>
  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
  
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
             <%= image_tag user.get_profile_image, size: '80x80' %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show",   user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
