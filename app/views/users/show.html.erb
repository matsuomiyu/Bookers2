<%= render 'books/user', user: @user, book: @book %>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
           <% if book.image.attach? %>
             <%= link_to image_tag(book.image, size: "80×80"), user_path(book.user.id) %>
           <% else %>
             <%= link_to image_tag('no_image', size: "80×80"), user_path(book.user.id) %>
           <% end %>
          </td>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
